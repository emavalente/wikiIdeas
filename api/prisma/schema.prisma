generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("URL_DATABASE")
}

model Article {
    id        Int      @id @default(autoincrement())
    title     String   @unique
    body      String
    //like set min value 0
    like      Int      @default(0) @map("likes")
    dislike   Int      @default(0) @map("dislikes")
    CreatedAt DateTime @default(now())
    UpdatedAt DateTime @default(now())

    id_category Int
    category    Category @relation(fields: [id_category], references: [id])

    id_thumbnail Int       @unique
    thumbnail    Thumbnail @relation(fields: [id_thumbnail], references: [id])
}

model Category {
    id        Int       @id @default(autoincrement())
    name      String    @unique
    article   Article[]
    CreatedAt DateTime  @default(now())
    UpdatedAt DateTime  @default(now())
}

model Thumbnail {
    id        Int      @id @default(autoincrement())
    url       String   @unique
    CreatedAt DateTime @default(now())
    UpdatedAt DateTime @default(now())

    article Article?
}
